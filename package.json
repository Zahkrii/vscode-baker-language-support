{
	"name": "baker-language-support",
	"displayName": "Baker Language Support",
	"description": "Baker Language support for Visual Studio Code.",
	"version": "1.0.1",
	"publisher": "strunmah",
	"license": "GPL",
	"author": {
		"name": "Zahkrii",
		"url": "https://github.com/Zahkrii"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Zahkrii/vscode-baker-language-support"
	},
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Programming Languages",
		"Themes",
		"Snippets",
		"Formatters"
	],
	"icon": "images/logo.png",
	"activationEvents": [
		"onLanguage:bakerlang"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "baker-language-support.bold",
				"title": "Set Bold"
			},
			{
				"command": "baker-language-support.red",
				"title": "Set Red"
			}
		],
		"keybindings": [
			{
				"command": "baker-language-support.bold",
				"key": "alt+b",
				"mac": "alt+b",
				"when": "editorLangId == bakerlang"
			},
			{
				"command": "baker-language-support.red",
				"key": "alt+r",
				"mac": "alt+r",
				"when": "editorLangId == bakerlang"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorLangId == bakerlang",
					"command": "baker-language-support.bold",
					"group": "navigation"
				},
				{
					"when": "editorLangId == bakerlang",
					"command": "baker-language-support.red",
					"group": "navigation"
				}
			]
		},
		"languages": [
			{
				"id": "bakerlang",
				"aliases": [
					"Baker Language",
					"bakerlang"
				],
				"extensions": [
					".cake"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "bakerlang",
				"scopeName": "text.baker",
				"path": "./syntaxes/bakerlang.tmLanguage.json"
			}
		],
		"themes": [
			{
				"label": "Baker Color",
				"uiTheme": "vs-dark",
				"path": "./themes/baker-color-theme.json"
			}
		],
		"snippets": [
			{
				"language": "bakerlang",
				"path": "./snippets/bakerlang.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.67.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4",
		"@vscode/test-electron": "^2.1.3"
	}
}